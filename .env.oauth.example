# Gmail Configuration
imap_server=imap.gmail.com
userid=your@gmail.com

# Authentication Method (choose one)
# Option 1: OAuth2 (recommended for security)
use_oauth=true
oauth_headless=false  # Set to 'true' for headless servers (no browser)

# Option 2: App Password (simpler alternative)
# use_oauth=false
# userpw=your-16-char-app-password

# Mailbox settings
mailbox=INBOX
port=8000
refresh_seconds=300
data_dir=data
server_baseurl=http://localhost:8000

# Internal RSS Reader (optional)
# Set to 'true' to enable internal article viewer at /article/{feed}/{guid}
# When enabled, RSS feed links point to internal reader instead of external websites
# Default: false (links point to sender's domain)
enable_internal_reader=false
